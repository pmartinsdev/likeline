{
  "extends": "@likeline/ts-config/base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@tests/*": [
        "src/tests/*"
      ],
      "@domains/*": [
        "src/domains/*"
      ],
      "@infrastructures/*": [
        "src/infrastructures/*"
      ]
    }
  }
}
